@using MyBookStoreApp.MyBookStoreApp.Web.ViewModels
@model List<BookViewModel>

@{
    ViewBag.Title = "Books";
}

<div class="card px-2 border-bottom-1 bg-light container">
    <div class="row">
        <h3 class="col-4">All Books</h3>
        <div class="col-4">
            <input type="text" class="form-control" />
        </div>
        <div class="col-1">
            <input type="button" class="btn btn-primary" value="Search" />
        </div>
        <div class="col-3">
            <a href="@Url.Action("Create", "Book")" class="btn btn-success">+ Create new</a>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model[0].Title)</th>
                <th>@Html.DisplayNameFor(model => model[0].Price)</th>
                <th>@Html.DisplayNameFor(model => model[0].AuthorId)</th>
                <th>@Html.DisplayNameFor(model => model[0].PublicationDate)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => book.Title)</td>
                    <td>@Html.DisplayFor(modelItem => book.Price)</td>
                    <td>@Html.DisplayFor(modelItem => book.AuthorId)</td>
                    <td>@Html.DisplayFor(modelItem => book.PublicationDate)</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a href="@Url.Action("Update", "Book", new { id = book.BookId })" class="btn btn-primary mx-2">Edit</a>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal_@book.BookId">Delete</button>
                        </div>

                        <!-- Delete Confirmation Modal -->
                        <div class="modal fade" id="deleteConfirmationModal_@book.BookId" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel_@book.BookId" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteConfirmationModalLabel_@book.BookId">Delete Confirmation</h5>
                                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Are you sure you want to delete this author?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary mx-3" data-bs-dismiss="modal">Cancel</button>
                                        <a href="@Url.Action("Delete", "Book", new { id = book.BookId})" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
